<h1 ng-show=title> {{title}} </h1>

<div class="container">

	<div class="blog-wrapper">

		<div class="span12 blog-post">
		  <div ng-show="viewData.imageUrl" class="blog-image" style="background-image: url({{viewData.imageUrl}}); height: 300px;"></div> 
		  <div class="blog-header" style="height: 5px;"></div>
		  <div class="blog-body">
  		  	<h2 class="blog-title">{{viewData.title}}</h2>
  		  	<h5 class="writer-name">{{viewData.name}} {{viewData.date | date:"d MMMM, yyyy"}}</h5>
		  	<p class="blog-body" ng-bind-html-unsafe=viewData.body></p>
		</div>
	</div>

		<style type="text/css">
.sshare td iframe{
border: none;
}
.sshare td{
padding: 10px;
}
.sshare td p{
margin: 0;
}
.sshare td .fb-like span iframe{
margin-top: -6px;
}
</style>
<p></p>
<div style="text-align:center;margin-left: 25%;">
<table class="sshare">
<tr>
<td>
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
